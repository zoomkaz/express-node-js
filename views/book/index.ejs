<%- include("../partials/layout-start", {title: title}) %>
  <%- include("../partials/menu") %>
    <h1>
      <%= title %>
    </h1>

    <a class="btn btn-sm btn-primary" href="/book/create">Добавить запись</a>

    <% if(book.length) { %>
      <table class="table table-striped table-sm  mt-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Заголовок</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% book.map((el, idx)=> { %>
            <tr>
              <th scope="row">
                <%= idx + 1 %>
              </th>
              <td>
                <%= el.title %>
              </td>
              <td class="text-right">
                <div class='views-<%= el.id %> d-inline '></div>
                <i class="fa fa-eye" aria-hidden="true"></i>
                <a class="btn btn-sm btn-success" href="/book/<%= el.id %>">
                  <i class="fa fa-eye" aria-hidden="true"></i>
                </a>
                <a class="btn btn-sm btn-primary" href="/book/update/<%= el.id %>">
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                <form action="/book/delete/<%= el.id %>" method="POST" class="d-inline">
                  <button class="btn btn-sm btn-danger">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% let book=el %>
              <script>
                fetch(`http://localhost:81/counter/${JSON.parse('<%- JSON.stringify(book) %>').id}`)
                  .then(res => res.json())
                  .then(data => {
                    document.querySelector(`.views-${JSON.parse('<%- JSON.stringify(book) %>').id}`).textContent = data.views || 0
                  })
              </script>
              <% }); %>
        </tbody>
      </table>

      <% }else { %>
        <h3 class="mt-5">Записей пока нет</h3>
        <% } %>


          <%- include("../partials/layout-end") %>